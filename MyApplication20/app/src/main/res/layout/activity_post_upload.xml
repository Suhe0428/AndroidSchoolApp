<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.community.upload.PostUploadActivity">

    <EditText
        android:id="@+id/editText_post_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:hint="点击编辑内容，最多200字..."
        android:textSize="20sp"
        android:gravity="start"
        android:background="#EEE685"/>

    <ImageView
        android:id="@+id/imageView_post_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_margin="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_post_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView_post_img" >

        <ImageButton
            android:id="@+id/imageButton_picture"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/ic_community_upload_picture"
            android:text="上传图片"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
